<div class='container'>
    <div class='row mt-4'>
        {{#each blogs}}
            <div class='sm-col-6 lg-col-4 mx-3 my-3'>
                <div class='card' style='width: 18rem;'>
                    <a href='/blog/{{this.slug}}'>
                        <img
                            class='card-img-top'
                            src='{{this.image}}'
                            alt='Card image cap'
                        />
                    </a>
                    <div class='card-body'>
                        <a href='/blog/{{this.slug}}'>
                            <h5 class='card-title'>{{this.author}}</h5>
                        </a>
                        <p class='card-text'>{{this.description}}</p>
                        <a href='#' class='btn btn-primary'>Go somewhere</a>
                    </div>
                </div>
            </div>
        {{/each}}

    </div>
</div>